@model List<CartItem>

<h2>Shopping Cart</h2>

@if (Model.Count == 0)
{
    <div id="empty-cart">
        <p>Your cart is empty.</p>
        <p>Click on one of the categories above to begin shopping.</p>
    </div>
}
else
{
    var totalPrice = Model.Sum(item => item.Price * item.Quantity);
    <div id="cart-with-products">
        <table class="table">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total for Item</th>
                </tr>
            </thead> 
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Price * item.Quantity)</td>
                    </tr>
                }
                <tr>
                    <td></td>
                    <td></td>
                    <td class="total-price-display">Total Price:</td>
                    <td>
                        <p class="total-price-display">@totalPrice</p>
                    </td>
                </tr>
            </tbody>
        </table>
        <div>
            <form asp-controller="Home" asp-action="CheckOut">
                <button type="submit" class="custom-button">Proceed to Checkout</button>
            </form>
        </div>
    </div>

}
