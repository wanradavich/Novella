        <img id="slider-img" src="~/Images/categories/pendant/novella_mockfeature_img.webp" alt="feature image"></img>
        <div class="dot-icon-container">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-three-dots" viewBox="0 0 16 16">
