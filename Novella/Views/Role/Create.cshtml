@model Novella.ViewModels.RoleVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Role</h1>  >

<h4 class="form-header">Role Details</h4>  
<hr />
<div class="row role-creation-form">
     <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group role-name-group">
                 <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control role-name-input" />  
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group submit-button-group">
                 <input type="submit" value="Create" class="btn btn-primary submit-role-btn" />  
            </div>
            <input type="hidden" asp-antiforgery="true" />
        </form>
    </div>
</div>

<div class="back-to-list-link">
     <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
