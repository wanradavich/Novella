@model IEnumerable<Novella.ViewModels.RoleVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Roles</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info custom-alert">
        @TempData["Message"]
    </div>
}

<p class="create-new-link">
    <a asp-action="Create" class="create-link">Create New</a> 
</p>

<table class="table role-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    <a asp-controller="Role" asp-action="Delete" asp-route-roleName="@item.RoleName"
                       class=" delete-role-link" onclick="return confirm('Are you sure you want to delete this role?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
