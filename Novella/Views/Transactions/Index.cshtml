@model IEnumerable<Novella.ViewModels.OrderViewModel> 

<h2>Orders</h2>

<table>
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Email</th>
            <th>Name</th>
            <th>Role</th>
            <th>SKU</th>
            <th>Status</th>
            <th>Date Ordered</th>
            <th>Shipping Address</th>
            <th>Billing Address</th>
            <th>Total Amount Purchased</th> 
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.Email</td> 
                <td>@order.Name</td> 
                <td>@order.Role</td>
                <td>@order.SKU</td> 
                <td>@order.Status</td> 
                <td>@order.DateOrdered</td> 
                <td>@order.ShippingAddress</td> 
                <td>@order.BillingAddress</td> 
                <td>@order.TotalPrice.ToString("C")</td> 
                <td>
                    <a class="btn btn-primary" href="@Url.Action("Edit", new { id = order.OrderId })">Edit</a>
                    <form method="post" action="@Url.Action("Delete", new { id = order.OrderId })" style="display:inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this order?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
