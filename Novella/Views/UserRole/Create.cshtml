@model Novella.ViewModels.UserRoleVM

<h4>Assign User Role</h4>
<hr />
<div class="row user-role-assignment">
    <div class="col-md-4">
        <form asp-action="Create" class="user-role-form">
            <input type="hidden" asp-antiforgery="true" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group user-email-select">
                <label asp-for="Email" class="control-label"></label>
                @Html.DropDownList("Email",
                new SelectList(ViewBag.UserSelectList, "Value", "Text",
                ViewBag.SelectedUser),
                "Select User", new { @id = "userDD", @class = "form-control" })
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group user-role-select">
                <label asp-for="Role" class="control-label"></label>
                @Html.DropDownList("Role",
                new SelectList(ViewBag.RoleSelectList, "Value", "Text"),
                "Select Role", new { @id = "roleDD", @class = "form-control" })
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button id="assignUserRole" type="submit" class="w-100 btn btn-sm btn-primary user-role-assign-btn">
                    Assign
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
