@page
@model RegisterModel
@{
    ViewData["Title"] = "Create an Account";
}

<h1>@ViewData["Title"]</h1>

<!-- A reference is required to the Google API -->

<script src='https://www.google.com/recaptcha/api.js'></script>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <p>Create an account to begin adding products to your shopping cart.<p>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-input" autocomplete="username" aria-required="true" placeholder="Email" />
                    <label asp-for="Input.Email" hidden>Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-input" autocomplete="new-password" aria-required="true" placeholder="Password" />
                    <label asp-for="Input.Password" hidden>Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-input" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                    <label asp-for="Input.ConfirmPassword" hidden>Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <!-- Add form fields for additional properties -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.FirstName" class="form-input" aria-required="true" placeholder="First Name" />
                    <label asp-for="Input.FirstName" hidden>First Name</label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.LastName" class="form-input" aria-required="true" placeholder="Last Name" />
                    <label asp-for="Input.LastName" hidden>Last Name</label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-input" aria-required="true" placeholder="Phone Number" />
                    <label asp-for="Input.PhoneNumber" hidden>Phone Number</label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.PaypalAccount" class="form-input" placeholder="PayPal Account" />
                    <label asp-for="Input.PaypalAccount" hidden>PayPal Account</label>
                    <span asp-validation-for="Input.PaypalAccount" class="text-danger"></span>
                </div>
                <!-- End of additional form fields -->
                <!-- This must be placed inside the form. -->
                <div class="g-recaptcha" data-sitekey='@ViewData["SiteKey"]'></div><br />
                <button id="registerSubmit" type="submit" class="custom-button">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
